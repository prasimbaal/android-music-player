<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/notnot"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/search_button"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/search_icon" />

    <Button
        android:id="@+id/playlist_button"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:background="@drawable/playlist" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:text="All Songs"
        android:textAlignment="textStart"
        android:textColor="#7b2cbf"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/heading"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#7b2cbf"
        android:iconifiedByDefault="true"
        android:queryHint="Search Songs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="10dp"
        android:layout_below="@id/searchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/controlPanel"
        android:clipToPadding="false"
        android:layout_marginBottom="25sp"
        android:scrollbars="vertical" />


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Playing_Song_Cardview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        app:cardElevation="10dp"
        android:background="#00FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/Playing_Song_Imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <!-- bottom player box -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/song_title"
                android:textColor="#7b2cbf"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Song Title Here">
            </TextView>

            <TextView
                android:id="@+id/song_artist"
                android:layout_marginTop="8dp"
                android:textColor="#7b2cbf"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginBottom="40dp"
                android:text="Song Artist Here">
            </TextView>

        </LinearLayout>

        <!-- horizontal time tracking bar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/positive_playback_timer"
                android:textColor="#7b2cbf"
                android:text="00:00"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                >
            </TextView>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:progressBackgroundTint="#7b2cbf"
                />
            <TextView
                android:id="@+id/negative_playback_timer"
                android:textColor="#7b2cbf"
                android:text="00:00"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                >
            </TextView>

        </LinearLayout>


        <!-- bottom next ,previous button-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reapet_button"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/repeat" />
            <Button
                android:id="@+id/previousButton"
                android:layout_marginRight="20sp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/previous"
                />
            <Button
                android:id="@+id/pauseResumeButton"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/play_icon"
                />
            <Button
                android:id="@+id/nextButton"
                android:layout_marginLeft="20sp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/next"
                />

            <Button
                android:id="@+id/shuffleButton"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shuffle_off"
                />

        </LinearLayout>

    <com.ex.musicplayer.CustomVisualizerView
        android:id="@+id/visualizerView"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF"
        />
    </LinearLayout>


</RelativeLayout>