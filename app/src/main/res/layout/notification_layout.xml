<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/notification_album_art"
        android:layout_width="91dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/audioicon"
        android:background="@drawable/not1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/not1">
        <!-- Title and Artist -->

        <!-- Playback Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Song Title"
                android:textColor="#7b2cbf"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_artist"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artist"

                android:textColor="#7b2cbf"
                android:textSize="29sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/notification_previous"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="previous"
                android:padding="12dp"
                android:src="@drawable/previous" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/notification_play_pause"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="play"
                android:padding="12dp"
                android:src="@drawable/play_icon" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/notification_next"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="next"
                android:padding="12dp"
                android:src="@drawable/next" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
